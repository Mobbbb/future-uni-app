/* 水平间距 */
html, body {
  width: 100%;
  height: 100%;
}
body {
  margin: 0;
  /* prevent pull-to-refresh for Chrome 63+ */
  overscroll-behavior-y: none;
}
page {
  background-color: #fff;
  overflow-y: scroll;
}
button[type=buy] {
  color: white;
  background-color: #eb4436;
}
button[type=buy]:active {
  color: #d9d9d9;
  background-color: #a82f26;
}
button[type=buy][disabled] {
  background-color: #eb7272;
}
button[type=buy][disabled]:active {
  background-color: #eb7272;
}
.button-hover[type=buy] {
  color: #d9d9d9;
  background-color: #a82f26;
}
button[type=sale] {
  color: white;
  background-color: #21a67a;
}
button[type=sale]:active {
  color: #d9d9d9;
  background-color: #19825f;
}
button[type=sale][disabled] {
  background-color: #3aa67e;
}
button[type=sale][disabled]:active {
  background-color: #3aa67e;
}
.button-hover[type=sale] {
  color: #d9d9d9;
  background-color: #19825f;
}
button[disabled][type=primary] {
  background-color: rgba(0, 122, 255, 0.6);
}
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
  background-color: #f5f6f7;
}
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 6px #f5f6f7;
  border-radius: 10px;
  background-color: #f5f6f7;
}
::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.1);
  background-color: rgba(255, 255, 255, 0.5);
}
.table-fixed .uni-table-td:nth-of-type(1), .table-fixed .uni-table-th:nth-of-type(1) {
  position: -webkit-sticky;
  position: sticky;
  z-index: 1;
  background-color: #ffffff;
}
.table-fixed.left .uni-table-td:nth-of-type(1), .table-fixed.left .uni-table-th:nth-of-type(1) {
  left: 0;
}
.table-fixed.right .uni-table-td:nth-of-type(1), .table-fixed.right .uni-table-th:nth-of-type(1) {
  right: 0;
}
.uni-table-checkbox {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  margin: 5px 0;
  cursor: pointer;
}
.uni-table-checkbox .checkbox__inner {
  flex-shrink: 0;
  box-sizing: border-box;
  position: relative;
  width: 16px;
  height: 16px;
  border: 1px solid #DCDFE6;
  border-radius: 2px;
  background-color: #fff;
  z-index: 1;
}
.uni-table-checkbox .checkbox__inner .checkbox__inner-icon {
  position: absolute;
  top: 2px;
  left: 5px;
  height: 7px;
  width: 3px;
  border: 1px solid #fff;
  border-left: 0;
  border-top: 0;
  opacity: 0;
  transform-origin: center;
  transform: rotate(45deg);
  box-sizing: content-box;
}
.uni-table-checkbox .checkbox__inner.checkbox--indeterminate {
  border-color: #2979ff;
  background-color: #2979ff;
}
.uni-table-checkbox .checkbox__inner.checkbox--indeterminate .checkbox__inner-icon {
  position: absolute;
  opacity: 1;
  transform: rotate(0deg);
  height: 2px;
  top: 0;
  bottom: 0;
  margin: auto;
  left: 0px;
  right: 0px;
  bottom: 0;
  width: auto;
  border: none;
  border-radius: 2px;
  transform: scale(0.5);
  background-color: #fff;
}
.uni-table-checkbox .checkbox__inner:hover {
  border-color: #2979ff;
}
.uni-table-checkbox .checkbox__inner.is-disable {
  background-color: #F2F6FC;
  border-color: #DCDFE6;
}
.uni-table-checkbox .checkbox__inner.is-checked {
  border-color: #2979ff;
  background-color: #2979ff;
}
.uni-table-checkbox .checkbox__inner.is-checked .checkbox__inner-icon {
  opacity: 1;
  transform: rotate(45deg);
}
.uni-table-checkbox .checkbox__inner.is-checked.is-disable {
  opacity: 0.4;
}